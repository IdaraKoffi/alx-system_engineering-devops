#!/bin/bash

# Install UFW (Uncomplicated Firewall) if not already installed
sudo apt-get update
sudo apt-get install -y ufw

# Configure UFW to block all incoming traffic except for specific ports
sudo ufw default deny incoming  # Set default policy to deny incoming traffic
sudo ufw default allow outgoing  # Set default policy to allow outgoing traffic

# Allow specific ports
sudo ufw allow 22/tcp  # Allow SSH (Port 22)
sudo ufw allow 80/tcp  # Allow HTTP (Port 80)
sudo ufw allow 443/tcp  # Allow HTTPS (Port 443)

# Enable UFW
sudo ufw enable

# Display UFW status
sudo ufw status
