#!/usr/bin/env bash
# This script configures Nginx on a new Ubuntu machine to add a custom HTTP header

# Update the system packages
sudo apt update
sudo apt upgrade -y

# Install Nginx if not already installed
sudo apt install -y nginx

# Configure Nginx to add the custom response header
echo 'add_header X-Served-By $host;' | sudo tee -a /etc/nginx/sites-available/default
sudo systemctl restart nginx
